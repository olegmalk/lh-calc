{
  "name": "lh-calculator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "NODE_ENV=production tsc -b && vite build --mode production",
    "build:analyze": "npm run build:prod -- --analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc -b --noEmit",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:once": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky",
    "docker:build": "docker build -t lh-calculator:latest .",
    "docker:run": "docker run -p 80:80 lh-calculator:latest",
    "deploy:prod": "./scripts/deploy.sh",
    "health:check": "./scripts/health-check.sh",
    "translations:analyze": "tsx src/tools/translation-analyzer.ts",
    "translations:fix": "tsx src/tools/translation-auto-fixer.ts",
    "translations:fix:dry-run": "tsx src/tools/translation-auto-fixer.ts --dry-run",
    "translations:check": "npm run translations:analyze && npm run translations:fix --dry-run"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@hookform/resolvers": "^5.2.1",
    "@mantine/charts": "^8.2.3",
    "@mantine/core": "^8.2.3",
    "@mantine/dates": "^8.2.3",
    "@mantine/form": "^8.2.3",
    "@mantine/hooks": "^8.2.3",
    "@mantine/notifications": "^8.2.3",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.7.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.15",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "puppeteer": "^24.16.0",
    "tsc-files": "^1.1.4",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
