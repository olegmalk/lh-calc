# Excel API Configuration
NODE_ENV=development
PORT=3000

# Bitrix24 Integration Configuration
# Required for production deployment with Bitrix24

# Webhook Security
BITRIX_WEBHOOK_SECRET=your_webhook_secret_here
BITRIX_VERIFY_SIGNATURES=true

# Application Authentication
BITRIX_APPLICATION_ID=your_bitrix_application_id
BITRIX_APPLICATION_SECRET=your_bitrix_application_secret

# Security Settings
BITRIX_CHECK_ORIGIN=true
BITRIX_ALLOWED_APPS=app1,app2,app3
BITRIX_CORS_ORIGINS=https://company.bitrix24.com,https://company.bitrix24.ru

# Rate Limiting
BITRIX_RATE_LIMIT_BY_APP=true

# Logging and Monitoring
BITRIX_LOG_WEBHOOKS=true

# API Configuration
API_MAX_REQUEST_SIZE=10mb
API_REQUEST_TIMEOUT=45000

# Processing Configuration
EXCEL_MAX_RETRIES=3
EXCEL_RETRY_DELAY_MS=200
EXCEL_MEMORY_LIMIT_MB=512
EXCEL_ENABLE_INTEGRITY_CHECK=true

# Queue Configuration
QUEUE_MAX_WORKERS=5
QUEUE_MAX_SIZE=200
QUEUE_REQUEST_TIMEOUT_MS=45000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Error Handling
ERROR_ENABLE_RECOVERY=true
ERROR_MAX_RETRY_ATTEMPTS=3
ERROR_INCLUDE_STACK_TRACE=true
ERROR_SANITIZE_MESSAGES=false

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Security
SECURITY_ENABLE_SANITIZATION=true
SECURITY_LOG_INCIDENTS=true

# Development/Testing
ENABLE_DEBUG_LOGGING=false
MOCK_EXCEL_PROCESSING=false