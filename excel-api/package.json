{
  "name": "excel-api",
  "version": "1.0.0",
  "description": "RESTful API service for processing heat exchanger cost calculations from Bitrix24 using Excel templates.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage --testPathIgnorePatterns=\"<rootDir>/tests/load/\"",
    "test:watch": "jest --watch --testPathIgnorePatterns=\"<rootDir>/tests/load/\"",
    "test:load": "jest --testMatch=\"**/tests/load/**/*.test.ts\" --runInBand",
    "test:all": "jest --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "joi": "^18.0.0",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
